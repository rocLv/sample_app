<%= provide(:title, @user.name ) %>
<div class="row">
	<aside class="col-sm-4">
		<section>
			<%= gravatar_for @user %>
			<h1>
				
				<%= @user.name %>
				<%= render 'follow_form' if signed_in? %>
			</h1>
			
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="col-sm-8 col-sm-offset-2">
		
		<% if @user.microposts.any? %>
			<h3>Microposts(<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end  %>
	</div>
</div>

